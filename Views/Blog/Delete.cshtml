@model SimpleBlogMVC.Models.BlogPost
@{
    ViewData["Title"] = "Delete Night Thought";
}

<div class="night-owl-header">
    <h1>@ViewData["Title"]</h1>
    <p>Are you sure you want to delete this night thought?</p>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card night-owl-card">
                <div class="card-body">
                    <h2 class="card-title text-danger mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                    </h2>
                    <h4>@Model.Title</h4>
                    <p>@Model.Content?.Substring(0, Math.Min(Model.Content.Length, 200))...</p>
                    <p>
                        <small>
                            <i class="fas fa-user me-2"></i>Posted by @Model.Username on @Model.CreatedAt.ToString("MMMM dd, yyyy")
                        </small>
                    </p>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>